{
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "src/background.ts",
    "{{chrome}}.type": "module",
    "{{firefox}}.scripts": ["src/background.ts"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.nyaa.si/*"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ]
}
