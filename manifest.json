{
  "manifest_version": 2,
  "name": "Nyaa Utility",
  "version": "0.1",
  "author": "Arjix",
  "description": "An extension that customizes nyaa.",
  "browser_action": {
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "downloads"
  ],
  "icons": {
    "16": "./assets/16.png",
    "48": "./assets/48.png",
    "128": "./assets/128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://nyaa.si/*",
        "https://sukebei.nyaa.si/*",
        "https://meowinjapanese.cf/*"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "addSettings.js",
        "nyaaDeadTorrents.js",
        "nyaaUserBlock.js"
      ]
    }
  ]
}