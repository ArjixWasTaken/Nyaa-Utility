{
  "manifest_version": 2,
  "name": "Nyaa Utility",
  "version": "0.1",
  "author": "Arjix",
  "description": "An extension that customizes nyaa.",
  "browser_action": {
    "default_popup": "./popup/popup.html"
  },
  "permissions": [
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://nyaa.si/*",
        "https://sukebei.nyaa.si/*",
        "https://meowinjapanese.cf/*"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "nyaaDeadTorrents.js",
        "nyaaUserBlock.js"
      ]
    }
  ]
}